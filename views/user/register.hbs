<main>
    <!-- breadcrumb-area-start -->
    <section class="breadcrumb-area" data-background="img/bg/page-title.png">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="breadcrumb-text text-center">
                        <h1>Register</h1>
                        <ul class="breadcrumb-menu">
                            <li><a href="/">home</a></li>
                            <li><span>Register</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->

    <!-- login Area Strat-->
    <section class="login-area pt-100 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <div class="basic-login">
                        <h3 class="text-center mb-60">Signup From Here</h3>
                        <h6 style="color: red;" id="errorMessage">{{errorMessage}}</h6> 
                        <form method="post" action="/register">
                            <label for="name">Username <span>**</span></label>
                            <input id="name" name="username" type="text" placeholder="Enter Username" required/>
                            <label for="number">Phone <span>**</span></label>
                            <input id="Number" name="phone" type="number" placeholder="Enter Your Phone Number" required/>
                            <label for="email-id">Email Address <span>**</span></label>
                            <input id="email-id" name="email" type="email" placeholder="Enter Email address..." required/>
                            <label for="pass">Password <span>**</span></label>
                            <input id="pass" name="password" type="password" placeholder="Enter password..." required/>
                            <label for="cpass">Confirm Password <span>**</span></label>
                            <input id="cpass" name="cpassword" type="password" placeholder="Re-enter password..." required/>
                            <div class="mt-10"></div>
                            <button class="btn theme-btn-2 w-100">Register Now</button>
                            <div class="or-divide"><span>or</span></div>
                            <a href="/login" class="btn theme-btn w-100">Login Now</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- login Area End-->
</main>

